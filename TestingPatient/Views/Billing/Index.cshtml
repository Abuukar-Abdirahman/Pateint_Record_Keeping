@model IEnumerable<TestingPatient.Models.Billing>

@{
    ViewData["Title"] = "Billings";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Billings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New Billing</a>
</p>

<!-- Card for the table -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary text-white">
        <h6 class="m-0 font-weight-bold text-white">Billings List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Patient)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                        <th>@Html.DisplayNameFor(model => model.First().PaymentStatus)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Patient.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                            <td>
                                <!-- Adding Icons to Action Buttons -->
                                <div class="btn-group" role="group" aria-label="Actions">
                                    <a asp-action="Edit" asp-route-id="@item.BillId" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@item.BillId" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@item.BillId" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
