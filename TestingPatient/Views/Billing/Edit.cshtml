@model TestingPatient.Models.Billing

@{
    ViewData["Title"] = "Edit Billing";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Edit Billing</h1>

<!-- Card for the form -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-info text-white">
        <h6 class="m-0 font-weight-bold text-white">Edit Billing Information</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillId" />

            <!-- Patient Selection -->
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Select Patient</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                    <option value="">-- Select Patient --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <!-- Amount Input -->
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Date Input -->
            <div class="form-group">
                <label asp-for="Date" class="control-label">Billing Date</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Payment Status -->
            <div class="form-group">
                <label asp-for="PaymentStatus" class="control-label">Payment Status</label>
                <div class="form-check">
                    <input type="radio" asp-for="PaymentStatus" value="Paid" class="form-check-input" />
                    <label class="form-check-label">Paid</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="PaymentStatus" value="Unpaid" class="form-check-input" />
                    <label class="form-check-label">Unpaid</label>
                </div>
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
