@model TestingPatient.Models.Billing

@{
    ViewData["Title"] = "Delete Billing";
    Layout = "_AdminLayout";
}

<h1>Delete Billing</h1>
<h3>Are you sure you want to delete this?</h3>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-danger text-white">
        <h6 class="m-0 font-weight-bold text-white">Delete Billing Confirmation</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Patient</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Patient.Name)</dd>
            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Amount)</dd>
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
            <dt class="col-sm-2">Payment Status</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PaymentStatus)</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="BillId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
