@model TestingPatient.Models.Prescription

@{
    ViewData["Title"] = "Prescription Details";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Prescription Details</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-info text-white">
        <h6 class="m-0 font-weight-bold text-white">Prescription Information</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Medication</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Medication)</dd>

            <dt class="col-sm-2">Dosage</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Dosage)</dd>

            <dt class="col-sm-2">Instructions</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Instructions)</dd>

            <dt class="col-sm-2">Appointment</dt>
            <dd class="col-sm-10">
                @if (Model.Appointment != null)
                {
                    <p>@Model.Appointment.AppointmentDate.ToString("MM/dd/yyyy") - Patient: @Model.Appointment.Patient?.Name ?? "N/A"</p>
                }
                else
                {
                    <p>N/A</p>
                }
            </dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Prescription</a>
</div>
