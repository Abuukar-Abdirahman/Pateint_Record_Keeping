@model TestingPatient.Models.Doctor

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Doctor Details</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary text-white">
        <h6 class="m-0 font-weight-bold text-white">Doctor Information</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <!-- Name -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <!-- Specialty -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Specialty)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Specialty)
            </dd>

            <!-- Phone Number -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
    </div>
</div>

<!-- Edit Button -->
<div class="d-flex justify-content-between mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">
        <i class="fas fa-edit"></i> Edit Doctor
    </a>
</div>
