            .sidebar .nav-link:hover {
                background-color: #303f9f; /* Darker blue */
                color: white;
            }

            /* Active state for the current menu item */
            .sidebar .nav-item.active > .nav-link {
                background-color: #303f9f; /* Darker blue */
                color: white;
            }

            /* Hover effect for submenu items */
            .sidebar .collapse-item:hover {
                background-color: #f1f3f5;
                color: #3f51b5; /* Blue */
            }

            /* Active state for submenu items */
            .sidebar .collapse-item.active {
                background-color: #f1f3f5;
                color: #3f51b5; /* Blue */
            }

            /* Change icon color when hovered */
            .sidebar .nav-link:hover i {
                color: white;
            }

            /* Icon colors for active state */
            .sidebar .nav-item.active i {
                color: white;
            }

            /* Style submenu icons to be visible */
            .sidebar .collapse-item i {
                color: #5a5a5a; /* Dark gray for normal state */
            }

            /* Submenu icon color change on hover */
            .sidebar .collapse-item:hover i {
                color: #3f51b5; /* Blue on hover */
            }

            /* Optional: Make the active submenu icon more prominent */
            .sidebar .collapse-item.active i {
                color: #3f51b5; /* Blue when active */
            }
    </style>
