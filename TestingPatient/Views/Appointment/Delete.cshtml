@model TestingPatient.Models.Appointment

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Delete Appointment</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-danger text-white">
        <h6 class="m-0 font-weight-bold text-white">Delete Appointment Confirmation</h6>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this appointment?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Appointment Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.AppointmentDate)</dd>

            <dt class="col-sm-2">Reason</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Reason)</dd>

            <dt class="col-sm-2">Patient</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PatientId)</dd>

            <dt class="col-sm-2">Doctor</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DoctorId)</dd>
        </dl>

        <!-- Trigger for Delete Confirmation Modal -->
        <button class="btn btn-danger btn-lg" data-toggle="modal" data-target="#deleteModal">Delete Appointment</button>

        <!-- Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this appointment? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
