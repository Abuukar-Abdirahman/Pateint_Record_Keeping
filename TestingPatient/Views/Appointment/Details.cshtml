@model TestingPatient.Models.Appointment

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Appointment Details</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary text-white">
        <h6 class="m-0 font-weight-bold text-white">Appointment Information</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Appointment Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.AppointmentDate)</dd>

            <dt class="col-sm-2">Reason</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Reason)</dd>

            <dt class="col-sm-2">Patient</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Patient.Name)</dd>

            <dt class="col-sm-2">Doctor</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Doctor.Name)</dd>
        </dl>
    </div>
</div>

<!-- Edit Button -->
<div class="d-flex justify-content-between mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">
        <i class="fas fa-edit"></i> Edit Appointment
    </a>
</div>
