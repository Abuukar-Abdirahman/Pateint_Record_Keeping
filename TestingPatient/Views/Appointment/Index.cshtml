@model IEnumerable<TestingPatient.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Appointments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg"><i class="fas fa-plus"></i> Create New Appointment</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary text-white">
        <h6 class="m-0 font-weight-bold text-white">Upcoming Appointments</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Appointment Date</th>
                        <th>Reason</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AppointmentDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                            <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                            <td>@Html.DisplayFor(modelItem => item.Patient.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Doctor.Name)</td>
                            <td>
                                <!-- Adding Icons to Action Buttons -->
                                <div class="btn-group" role="group" aria-label="Actions">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
