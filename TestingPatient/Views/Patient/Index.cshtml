@model IEnumerable<TestingPatient.Models.Patient>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";  // Ensure the correct layout is being used
}

<h1 class="h3 mb-4 text-gray-800">Patient List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg"><i class="fas fa-plus"></i> Create New Patient</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary text-white">
        <h6 class="m-0 font-weight-bold text-white">Patient Details</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                            <td class="text-center d-flex justify-content-between">
                                <!-- Action buttons with proper spacing -->
                                @if (ViewBag.Mode == "edit")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                }
                                else if (ViewBag.Mode == "delete")
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                }
                                else if (ViewBag.Mode == "details")
                                {
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                }
                                else
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-2">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-2">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
